<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:backgroundTint="@color/white"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical">

                <!-- Título de la sección de categoría -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar Categoría"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_gravity="center"
                    android:paddingBottom="16dp"/>

                <!-- Guía para el campo de nombre de la categoría -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingresa el nombre de la nueva categoría."
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_gravity="center"
                    android:paddingBottom="8dp"/>

                <!-- Campo de texto para el nombre de la categoría -->
                <EditText
                    android:id="@+id/categoria_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre de la categoría"
                    android:inputType="textCapWords"
                    android:backgroundTint="#6200EE"
                    android:padding="12dp"
                    android:textColor="#333333"
                    android:textColorHint="#888888"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"/>

                <!-- Botón para agregar la categoría -->
                <Button
                    android:id="@+id/agregar_categoria_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agregar Categoría"
                    android:backgroundTint="#6200EE"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp"
                    android:layout_gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView para el formulario de Agregar Subcategoría -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical">

                <!-- Título de la sección de subcategoría -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar Subcategoría"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_gravity="center"
                    android:paddingBottom="16dp"/>

                <!-- Guía para el spinner de selección de categoría -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona una categoría para la subcategoría."
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_gravity="center"
                    android:paddingBottom="8dp"/>

                <!-- Spinner para seleccionar una categoría -->
                <Spinner
                    android:id="@+id/categoria_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:padding="12dp"
                    android:background="@drawable/spinner_popup_background"
                    android:popupBackground="@drawable/spinner_popup_background"
                    android:dropDownVerticalOffset="2dp"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

                <!-- Guía para el campo de nombre de la subcategoría -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingresa el nombre de la nueva subcategoría."
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_gravity="center"
                    android:paddingBottom="8dp"/>

                <!-- Campo de texto para el nombre de la subcategoría -->
                <EditText
                    android:id="@+id/subcategoria_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre de la subcategoría"
                    android:inputType="textCapWords"
                    android:backgroundTint="#6200EE"
                    android:padding="12dp"
                    android:textColor="#333333"
                    android:textColorHint="#888888"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"/>

                <!-- Botón para agregar la subcategoría -->
                <Button
                    android:id="@+id/agregar_subcategoria_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agregar Subcategoría"
                    android:backgroundTint="#6200EE"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp"
                    android:layout_gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView para el formulario de Agregar Sub-subcategoría -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_background"
                android:orientation="vertical">

                <!-- Título de la sección de sub-subcategoría -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Agregar Sub-subcategoría"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_gravity="center"
                    android:paddingBottom="16dp"/>

                <!-- Guía para el spinner de selección de subcategoría -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecciona una subcategoría para la sub-subcategoría."
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_gravity="center"
                    android:paddingBottom="8dp"/>

                <!-- Spinner para seleccionar una subcategoría -->
                <Spinner
                    android:id="@+id/subcategoria_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:padding="12dp"
                    android:background="@drawable/spinner_popup_background"
                    android:popupBackground="@drawable/spinner_popup_background"
                    android:dropDownVerticalOffset="2dp"
                    android:textColor="#333333"
                    android:textSize="16sp"/>

                <!-- Guía para el campo de nombre de la sub-subcategoría -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingresa el nombre de la nueva sub-subcategoría."
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_gravity="center"
                    android:paddingBottom="8dp"/>

                <!-- Campo de texto para el nombre de la sub-subcategoría -->
                <EditText
                    android:id="@+id/subsubcategoria_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre de la sub-subcategoría"
                    android:inputType="textCapWords"
                    android:backgroundTint="#6200EE"
                    android:padding="12dp"
                    android:textColor="#333333"
                    android:textColorHint="#888888"
                    android:textSize="16sp"
                    android:layout_marginBottom="20dp"/>
                <Button
                    android:id="@+id/agregar_subsubcategoria_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Agregar Sub-subcategoría"
                    android:backgroundTint="#6200EE"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp"
                    android:layout_gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
