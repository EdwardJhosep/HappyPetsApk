<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".vista_previa.InicioActivity">

    <!-- Contenedor Scrollable -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Contenido dentro del NestedScrollView -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/logoImageView"
                    android:layout_width="94dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/logo"
                    android:contentDescription="Logo"/>

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="HappyPets"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:layout_marginEnd="16dp"/>

                <Button
                    android:id="@+id/Ingresar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingresar"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/secondary_color"
                    android:layout_marginStart="16dp"/>

            </LinearLayout>

            <!-- CardView con ViewPager -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/imageCarousel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

            <!-- Texto descriptivo debajo del carrusel de imÃ¡genes -->
            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â¡Descubre nuestros productos y servicios veterinarios de alta calidad para cuidar a tu mascota como se merece! RegÃ­strate ahora ðŸ“ o inicia sesiÃ³n si ya tienes cuenta ðŸ”‘."
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingTop="45dp"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="4dp"
                android:textAlignment="center"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <TextView
                android:id="@+id/TITUOPRODUCTO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENCUENTRA LOS MEJORES PRODUCTOS PARA EL CUIDADO DE TU MEJOR AMIGO "
                android:textSize="19dp"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="4dp"
                android:paddingTop="35dp"
                android:textAlignment="center"
                android:shadowColor="#91CCEB"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="6" />

            <!-- RecyclerView para mostrar productos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:clipToPadding="false"
                android:elevation="8dp"
                android:scrollbars="vertical"
                tools:listitem="@layout/item_producto_preview" />

            <!-- TÃ­tulo para el Video -->
            <TextView
                android:id="@+id/TITULOVIDEO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EXPERIMENTA CON REALIDAD AUMENTADA SOLO EN HAPPYPETS "
                android:textSize="15dp"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:lineSpacingExtra="4dp"
                android:paddingTop="22dp"
                android:textAlignment="center"
                android:shadowColor="#91CCEB"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- CardView con Video -->
            <androidx.cardview.widget.CardView
                android:id="@+id/videoCardView"
                android:layout_width="match_parent"
                android:background="@drawable/bordeusuario"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingTop="22dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp">
                <android.widget.VideoView
                    android:id="@+id/videoView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/copyrightTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Â© 2024 HappyPets. Todos los derechos reservados. Desarrollado por: RJ ENTERPRISESâ„¢"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp" />

            <!-- VersiÃ³n de la aplicaciÃ³n -->
            <TextView
                android:id="@+id/versionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VersiÃ³n 1.0.2"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
