<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="#FFFFFF"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Imagen del servicio -->
        <ImageView
            android:id="@+id/imagenServicioImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/placeholder_image"
            android:layout_marginEnd="12dp"
            android:contentDescription="Imagen del servicio"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:background="@drawable/circle_background"/>

        <!-- Contenedor de texto y botón -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Título del servicio -->
            <TextView
                android:id="@+id/tipoServicioTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de Servicio"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <!-- Descripción del servicio -->
            <TextView
                android:id="@+id/descripcionServicioTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción del servicio"
                android:textSize="14sp"
                android:textColor="#777777"
                android:layout_marginTop="4dp"/>

            <!-- Botón de Reservar -->
            <Button
                android:id="@+id/reservarButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reservar"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF5722"
                android:layout_marginTop="8dp"
                android:layout_gravity="end"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:elevation="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
