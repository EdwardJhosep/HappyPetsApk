<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ticket_background"
    android:gravity="center_horizontal">

    <!-- Contenedor Principal -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:elevation="6dp"
        android:layout_margin="8dp"
        android:background="@drawable/ticket_container_background"
        android:layout_gravity="center">

        <!-- Título del Ticket -->
        <TextView
            android:id="@+id/titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Pedido Confirmado!"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="12dp" />

        <!-- Logo del Producto o Empresa -->
        <ImageView
            android:id="@+id/imageViewProducto"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp"
            android:contentDescription="Logo Empresa" />

        <!-- Nombre del Producto -->
        <TextView
            android:id="@+id/textViewProductoNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camisa Azul"
            android:textSize="20sp"
            android:textColor="@color/price_color"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="13dp" />

        <!-- Código de Operación -->
        <TextView
            android:id="@+id/textViewCodigoOperacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÓDIGO: 123456789"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/operation_code_color"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:background="@drawable/code_background" />

        <!-- Contenedor de Detalles -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@drawable/card_background"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <!-- Cantidad -->
            <TextView
                android:id="@+id/textViewCantidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cantidad: 2"
                android:textSize="16sp"
                android:textColor="@color/textColor"
                android:fontFamily="sans-serif"
                android:paddingBottom="8dp" />

            <!-- Color -->
            <TextView
                android:id="@+id/textViewColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Color: Azul"
                android:textSize="16sp"
                android:textColor="@color/textColor"
                android:fontFamily="sans-serif"
                android:paddingBottom="8dp" />

            <!-- Importe Total -->
            <TextView
                android:id="@+id/textViewImporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Importe: S/100.00"
                android:textSize="16sp"
                android:textColor="@color/verde"
                android:fontFamily="sans-serif"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/textViewTipoPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pago con: Yape"
                android:textSize="16sp"
                android:textColor="@color/textColor"
                android:fontFamily="sans-serif"
                android:paddingBottom="8dp" />

            <!-- Fecha del Pedido -->
            <TextView
                android:id="@+id/textViewFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha: 15/11/2024"
                android:textSize="16sp"
                android:textColor="@color/secondary_color"
                android:fontFamily="sans-serif"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <!-- Botón para descargar la boleta -->
        <Button
            android:id="@+id/btnGenerarPdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="Descargar Boleta"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</LinearLayout>
