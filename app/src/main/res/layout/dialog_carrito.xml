<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Card para el título del formulario -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:radius="12dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles del Carrito"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp"
            android:textColor="@color/secondary_color"
            android:fontFamily="sans-serif-medium" />
    </androidx.cardview.widget.CardView>

    <!-- Precio del producto con un fondo redondeado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/container_background_rounded"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/textViewProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_marginBottom="4dp" />
    </LinearLayout>

    <!-- Cantidad con fondo redondeado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/container_background_rounded"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/textViewCantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/editTextCantidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese cantidad de productos"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Selección de color con un diseño más amigable -->
    <TextView
        android:id="@+id/textViewColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:textColor="@color/primary_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:weightSum="4">

        <!-- Imagen del botón color rojo -->
        <ImageButton
            android:id="@+id/buttonColorRed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Rojo"
            android:src="@drawable/circle_red"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_marginEnd="8dp" />

        <!-- Imagen del botón color verde -->
        <ImageButton
            android:id="@+id/buttonColorGreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Verde"
            android:src="@drawable/circle_green"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_marginEnd="8dp" />

        <!-- Imagen del botón color azul -->
        <ImageButton
            android:id="@+id/buttonColorBlue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Azul"
            android:src="@drawable/circle_blue"
            android:padding="8dp"
            android:elevation="4dp"
            android:layout_marginEnd="8dp" />

        <!-- Imagen del botón color otro -->
        <ImageButton
            android:id="@+id/buttonColorOtro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Otro"
            android:src="@drawable/circle_otro"
            android:padding="8dp"
            android:elevation="4dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Color Seleccionado"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:focusable="false"
        android:layout_marginBottom="16dp" />

    <!-- Importe -->
    <TextView
        android:id="@+id/textViewImporte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Importe:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="#19B400" />

    <!-- Botones de acción con botones más amigables -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonClose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cerrar"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/red_color"
            android:padding="12dp"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            android:fontFamily="sans-serif-medium" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAddToCart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirmar Pedido"
            android:backgroundTint="@color/discount_color"
            android:padding="12dp"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>
</LinearLayout>
