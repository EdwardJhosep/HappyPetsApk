<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Campo para ingresar el tipo de servicio -->
    <EditText
        android:id="@+id/editTextTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo de Servicio"
        android:inputType="text" />

    <!-- Campo para ingresar la descripción del servicio -->
    <EditText
        android:id="@+id/editTextDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción del Servicio"
        android:inputType="textMultiLine" />

    <!-- Botón para seleccionar la imagen desde la cámara -->
    <Button
        android:id="@+id/buttonSeleccionarImagen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tomar Foto del Servicio" />

    <!-- Botón para seleccionar la imagen desde la galería -->
    <Button
        android:id="@+id/buttonSeleccionarDesdeGaleria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Imagen desde Galería" />

    <!-- Vista previa de la imagen seleccionada -->
    <ImageView
        android:id="@+id/imageViewServicio"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo" />

    <!-- Botón para agregar el servicio -->
    <Button
        android:id="@+id/buttonAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Servicio"
        android:layout_marginTop="24dp" />

</LinearLayout>
