<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    android:gravity="center_horizontal">

    <!-- Título del formulario -->
    <TextView
        android:id="@+id/formTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Servicio"
        android:textSize="22sp"
        android:textColor="#333333"
        android:layout_marginBottom="24dp"
        android:textStyle="bold"/>

    <!-- Campo para ingresar el tipo de servicio -->
    <EditText
        android:id="@+id/editTextTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo de Servicio"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/card_background"
        android:minHeight="48dp" />

    <!-- Campo para ingresar la descripción del servicio -->
    <EditText
        android:id="@+id/editTextDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Descripción del Servicio"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:background="@drawable/card_background"
        android:minHeight="100dp"
        android:layout_marginTop="16dp" />

    <!-- Contenedor horizontal para los botones de imagen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal">

        <!-- Botón para seleccionar la imagen desde la cámara -->
        <ImageButton
            android:id="@+id/buttonSeleccionarImagen"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_camera"
            android:contentDescription="Tomar Foto del Servicio"
            android:padding="12dp"
            android:scaleType="centerInside"/>

        <!-- Botón para seleccionar la imagen desde la galería -->
        <ImageButton
            android:id="@+id/buttonSeleccionarDesdeGaleria"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/ic_gallery"
            android:contentDescription="Seleccionar Imagen desde Galería"
            android:padding="12dp"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <!-- Vista previa de la imagen seleccionada -->
    <ImageView
        android:id="@+id/imageViewServicio"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/placeholder_image"
        android:scaleType="centerCrop"/>

    <!-- Botón para agregar el servicio -->
    <Button
        android:id="@+id/buttonAgregar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar Servicio"
        android:backgroundTint="@color/primary_color"
        android:textColor="@android:color/white"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:textSize="16sp"/>

</LinearLayout>
