<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar Producto"
                android:textColor="@color/red_color"
                android:textSize="28sp"
                android:layout_marginBottom="24dp"
                android:textStyle="bold"/>
        </LinearLayout>



        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="6"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del producto:"
                android:textColor="@color/text_color"/>

            <EditText
                android:id="@+id/editarNombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:hint="Ej: Camiseta"
                android:padding="12dp"
                android:background="@drawable/input_background"
                android:textColor="@color/text_color"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripción del producto:"
                android:textColor="@color/text_color"/>

            <EditText
                android:id="@+id/editarDescripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:hint="Descripción..."
                android:padding="12dp"
                android:background="@drawable/input_background"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:minLines="2"
                android:maxLines="4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio:"
                android:textColor="@color/text_color"/>

            <EditText
                android:id="@+id/editarPrecio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:hint="Ej: 29.99"
                android:padding="12dp"
                android:background="@drawable/input_background"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:inputType="numberDecimal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descuento (%):"
                android:textColor="@color/text_color"/>

            <EditText
                android:id="@+id/editarDescuento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:hint="Ej: 10"
                android:padding="12dp"
                android:background="@drawable/input_background"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock disponible:"
                android:textColor="@color/text_color"/>

            <EditText
                android:id="@+id/editarStock"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:hint="Ej: 100"
                android:padding="12dp"
                android:background="@drawable/input_background"
                android:textColor="@color/text_color"
                android:textSize="16sp"
                android:inputType="number"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoría del producto:"
                android:textColor="@color/text_color"/>

            <EditText
                android:id="@+id/editarCategoria"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:hint="Ej: Ropa"
                android:padding="12dp"
                android:background="@drawable/input_background"
                android:textColor="@color/text_color"
                android:textSize="16sp"/>

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccione los colores:"
            android:textColor="@color/text_color"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <CheckBox
                android:id="@+id/checkBlanco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blanco" />

            <CheckBox
                android:id="@+id/checkRojo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rojo" />

            <CheckBox
                android:id="@+id/checkAzul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Azul" />

            <CheckBox
                android:id="@+id/checkVerde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verde" />

            <CheckBox
                android:id="@+id/checkMorado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morado" />

            <CheckBox
                android:id="@+id/checkAmarillo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amarillo" />

            <CheckBox
                android:id="@+id/checkNegro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Negro" />

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/botonActualizar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:padding="12dp"
                android:text="Guardar"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_color"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/botonEliminar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="12dp"
                android:text="Eliminar Producto"
                android:textColor="@color/white"
                android:backgroundTint="@color/red_color"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
