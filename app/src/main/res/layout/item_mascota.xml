<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bordemascota"
    android:padding="11dp"
    android:layout_margin="8dp">

    <View
        android:id="@+id/estadoView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="1dp"
        android:background="@drawable/circle_background_estado"/>

    <ImageView
        android:id="@+id/mascotaImageView"
        android:layout_width="95dp"
        android:layout_height="83dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/card_background"
        android:clipToOutline="true"
        android:contentDescription="Imagen de la mascota"
        android:padding="4dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/nombreTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#FF5722"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/mascotaImageView"/>

    <TextView
        android:id="@+id/edadTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#FFC107"
        android:layout_marginTop="2dp"
        android:layout_below="@id/nombreTextView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/especieTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#4CAF50"
        android:layout_marginTop="2dp"
        android:layout_below="@id/edadTextView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/razaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#2196F3"
        android:layout_marginTop="2dp"
        android:layout_below="@id/especieTextView"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/sexoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#9C27B0"
        android:layout_marginTop="2dp"
        android:layout_below="@id/razaTextView"
        android:layout_centerHorizontal="true"/>
</LinearLayout>
